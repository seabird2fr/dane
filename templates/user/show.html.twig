{% extends 'base.html.twig' %}

{% block title %}{{'Utilisateur'|trans}} "{{ user.username }}"{% endblock %}

{% block body %}
    <h1>{{'Utilisateur'|trans}} "{{ user.username }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Identifiant'|trans }}</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>{{ 'Email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'IsActive'|trans }}</th>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>{{ 'Roles'|trans }}</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mr-2" href="{{ path('user_index') }}"><i class="fas fa-arrow-circle-left"></i> {{'Retour Ã  la liste'|trans}}</a>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-pencil-alt"></i> {{'Editer'|trans}}</a>
    {% endif %}

{% endblock %}
