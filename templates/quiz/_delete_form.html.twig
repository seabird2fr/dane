{% if is_granted('ROLE_TEACHER') %}
    <form method="post" action="{{ path('quiz_delete', {'id': quiz.id}) }}" onsubmit="return confirm('{{'Etes-vous sur de vouloir effacer le Quiz ?'}}');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
        <button class="btn btn-danger btn-sm mr-2" title="{{'Effacer'}}"><i class="fas fa-trash-alt"></i></button>
    </form>
{% endif %}
